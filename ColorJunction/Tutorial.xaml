<Window x:Class="ColorJunction.Tutorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tutorial" Height="500" Width="300"  WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="125"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button Name="menubtn" Grid.Column="1" Grid.Row="1" Click="menubtn_Click">Back To Menu</Button>
    </Grid>
</Window>
